<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/grid_view_vertical_padding"
    android:paddingLeft="@dimen/grid_view_horizon_padding"
    android:paddingRight="@dimen/grid_view_horizon_padding"
    android:paddingTop="@dimen/grid_view_vertical_padding"
    tools:context=".MainActivity$PlaceholderFragment">

    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnWidth="@dimen/grid_item_column_width"
        android:gravity="center"
        android:numColumns="auto_fit"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="@dimen/grid_item_horizon_spacing"
        android:verticalSpacing="@dimen/grid_item_vertical_spacing"/>
</RelativeLayout>
